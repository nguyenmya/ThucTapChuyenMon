
@{
    ViewBag.Title = "Trả phòng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using QLKS.Models
@model List<HoaDon>

<!-- SSS -->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Trả phòng</li>
</ol>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách phòng đang sử dụng
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <!-- /SSS -->
            <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Số phòng</th>
                        <th>Loại phòng</th>
                        <th>Tầng</th>
                        <th>Ngày vào</th>
                        <th>Ngày ra</th>
                        <th>Tình trạng</th>
                        <th>Thiết lập</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        if (item.ma_tinh_trang == 1)
                        {
                            <tr>
                                <td>@item.PhieuDatPhong.Phong.so_phong</td>
                                <td>@item.PhieuDatPhong.Phong.LoaiPhong.mo_ta</td>
                                <td>@item.PhieuDatPhong.Phong.Tang.ten_tang</td>
                                <td>@item.PhieuDatPhong.ngay_vao.Value.ToShortDateString()</td>
                                <td>@item.PhieuDatPhong.ngay_ra.Value.ToShortDateString()</td>
                                <td><span class="badge badge-danger badge-g">@item.PhieuDatPhong.Phong.TinhTrangPhong.mo_ta</span></td>
                                <td>
                                    <a href="@Url.Action("ThanhToan","HoaDon",new { id = item.ma_hd})"><div class="btn btn-danger badge-g">Trả phòng</div></a>
                                    <a href="@Url.Action("GiaHanPhong","HoaDon",new { id = item.ma_hd})"><div class="btn btn-info badge-g">Gia Hạn</div></a>
                                    <a href="@Url.Action("DoiPhong","HoaDon",new { id = item.ma_hd})"><div class="btn btn-secondary badge-g">Đổi phòng</div></a>
                                </td>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>