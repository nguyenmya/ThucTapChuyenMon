                    <div class="dropdown-menu g-dropdown" aria-labelledby="alertsDropdown">
                        <h6 class="dropdown-header">Thông Báo</h6>


                        @{
                            DateTime d = DateTime.Now.AddDays(1);
                            List<QLKS.Models.HoaDon> hd = db.HoaDons.Where(t => t.ma_tinh_trang == 1 && t.PhieuDatPhong.ngay_ra < d).OrderBy(t => t.PhieuDatPhong.ngay_ra).Take(5).OrderByDescending(t => t.PhieuDatPhong.ngay_ra).ToList();
                            List<QLKS.Models.PhieuDatPhong> pdp = db.PhieuDatPhongs.Where(t => t.ma_tinh_trang == 1).OrderByDescending(t => t.ngay_dat).Take(5).ToList();
                            int i = 0, j = 0, k = 0, max = 7;
                            while (k < max && i < hd.Count && j < pdp.Count)
                            {
                                if (hd[i].PhieuDatPhong.ngay_ra.Value.AddDays(-1) > pdp[j].ngay_dat)
                                {
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">
                                        <span class="text-danger">
                                            <strong>
                                                <i class="fa fa-sign-out fa-fw"></i>Trả phòng @hd[i].PhieuDatPhong.Phong.so_phong
                                            </strong>
                                        </span>
                                        <span class="small float-right text-muted">@hd[i].PhieuDatPhong.ngay_ra.Value.AddDays(-1).ToShortDateString()</span>
                                        <div class="dropdown-message small">Thời gian trả phòng vào lúc @hd[i].PhieuDatPhong.ngay_ra</div>
                                    </a>
                                    i = i + 1;
                                }
                                else
                                {

                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">
                                        <span class="text-success">
                                            <strong>
                                                <i class="fa fa-plus-circle fa-fw"></i>Đặt phòng @pdp[j].Phong.so_phong
                                            </strong>
                                        </span>
                                        <span class="small float-right text-muted"> @pdp[j].ngay_dat.Value.ToShortDateString()</span>
                                        <div class="dropdown-message small">Phòng @pdp[j].Phong.so_phong được đặt vào lúc @pdp[j].ngay_dat</div>
                                    </a>
                                    j = j + 1;

                                }
                                k = k + 1;
                            }
                            for (int a = i; a < hd.Count; a++)
                            {
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">
                                    <span class="text-danger">
                                        <strong>
                                            <i class="fa fa-sign-out fa-fw"></i>Trả phòng @hd[a].PhieuDatPhong.Phong.so_phong
                                        </strong>
                                    </span>
                                    <span class="small float-right text-muted">@hd[a].PhieuDatPhong.ngay_ra.Value.AddDays(-1).ToShortDateString()</span>
                                    <div class="dropdown-message small">Thời gian trả phòng vào lúc @hd[a].PhieuDatPhong.ngay_ra</div>
                                </a>

                                k = k + 1;
                                if (k >= max)
                                {
                                    break;
                                }
                            }
                            for (int a = j; a < pdp.Count; a++)
                            {

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">
                                    <span class="text-success">
                                        <strong>
                                            <i class="fa fa-plus-circle fa-fw"></i>Đặt phòng @pdp[a].Phong.so_phong
                                        </strong>
                                    </span>
                                    <span class="small float-right text-muted">@pdp[a].ngay_dat.Value.ToShortDateString()</span>
                                    <div class="dropdown-message small">Phòng @pdp[a].Phong.so_phong được đặt vào lúc @pdp[a].ngay_dat</div>
                                </a>
                                k = k + 1;
                                if (k >= max)
                                {
                                    break;
                                }
                            }
                        }



