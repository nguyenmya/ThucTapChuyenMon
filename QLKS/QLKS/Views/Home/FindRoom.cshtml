@model IEnumerable<QLKS.Models.Phong>

@{
    ViewBag.Title = "Tìm phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .thumb {
        width: 100px;
        height: 75px;
        background-color: #3e3e3e;
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
    }

    .btn-hoantat {
        color: #fff;
        width: 102%;
        margin: auto;
        padding: 0.5em 0;
        margin-top: 0em;
        font-size: 1em;
        letter-spacing: 2px;
        cursor: pointer;
        border: none;
        outline: none;
        border-radius: 30px;
        font-weight: 600;
        background: #656518;
        color: #fff;
        border: 1px solid transparent;
        font-family: 'Source Sans Pro', sans-serif;
        transition: 0.5s all ease;
        -webkit-transition: 0.5s all ease;
        -moz-transition: 0.5s all ease;
        -o-transition: 0.5s all ease;
        -ms-transition: 0.5s all ease;
        height: 44px;
    }

        .btn-hoantat:hover {
            border: 1px solid #fd5c63;
            color: #fd5c6;
            background: transparent;
            transition: all 0.5;
        }

    .btn-hoantat1 {
        color: #fff;
        width: 62%;
        margin: auto;
        padding: 0.5em 0;
        margin-top: 0em;
        font-size: 0.8em;
        cursor: pointer;
        border: none;
        outline: none;
        border-radius: 30px;
        font-weight: 600;
        color: #fff;
        background-image: linear-gradient(to right, #ff0066 0%, #ff9933 100%);
        border: 1px solid transparent;
        font-family: 'Source Sans Pro', sans-serif;
        transition: 0.5s all ease;
        -webkit-transition: 0.5s all ease;
        -moz-transition: 0.5s all ease;
        -o-transition: 0.5s all ease;
        -ms-transition: 0.5s all ease;
        height: 52px;
    }

        .btn-hoantat1:hover {
            border: 1px solid #fd5c63;
            color: #fd5c6;
            background: transparent;
            transition: all 0.5;
        }

    .anima {


            margin-left: 10px;
    margin-top: 20px;
    margin-bottom: 30px;

        text-align: center;
        background: #e0e0e0;
        background: #ffc107;
        background: #fff;
        padding: 25px 40px;
        -webkit-box-shadow: 0 0 40px #aaa;
        -moz-box-shadow: 0 0 40px #aaa;
        box-shadow: 0 0 40px #aaa;
        -webkit-transition: all 0.5s;
        -moz-transition: all 0.5s;
        transition: all 0.5s;
        -o-transition: all 0.5s;
        -ms-transition: all 0.5s;
        -webkit-box-shadow: 0px 1px 8px 0px rgba(158, 158, 158, 0.75);
        -moz-box-shadow: 0px 1px 8px 0px rgba(158, 158, 158, 0.75);
        box-shadow: 0px 1px 8px 0px rgba(158, 158, 158, 0.75);
    }

        .anima:hover {
          
            background-image: linear-gradient(to right, #eef3d2 0%, #fc8884 100%);
        }
</style>
<header  style="background-image: url(/Content/Home/hinhchinh/khach-san-me-kong-my-tho-0.jpg);" id="" class=" gtco-cover-md g-header" role="banner" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<div class="container">
    <br /><br /><br /><br />
    <div class="">
        <div class="panel-heading">
            Mời quý khách chọn phòng
        </div>

        <div class="panel-body">
            @using (Html.BeginForm("FindRoom", "Home"))
            {
                <div class="row">
                    <div class="col-md-2">
                        <a href="@Url.Action("BookRoom","Home")" onclick="return checkChonPhong()" class="btn  btn-block btn-hoantat">Hoàn Tất</a>
                    </div>
                </div>
            }
            <br />
            <div>
                @{
                    var loaiPhong = Model.Select(q => q.loai_phong).ToArray();
                    loaiPhong = loaiPhong.Distinct().ToArray();
                }
                @foreach (var loai in loaiPhong)
                {
                    <div class=" table-responsive">
                        <div style="margin-bottom:10px" class="a">
                            <table overflow="scroll">
                                <tr>
                                    @foreach (var item in Model)
                                    {
                                        if (item.loai_phong == loai)
                                        {
                                            <td>
                                                <div class="anima" style="margin-right:10px">
                                                    <table style="width:270px">
                                                        <tr>
                                                            @{
                                                                String m = (item.LoaiPhong.anh);
                                                                try
                                                                {
                                                                    List<String> a = Newtonsoft.Json.JsonConvert.DeserializeObject<List<String>>(m);
                                                                    <div class="thumb" onclick="clickImg(@item.LoaiPhong.loai_phong)" style="background-image:url(@a[0]); width:100%" />
                                                                }
                                                                catch { }
                                                            }
                                                        </tr>
                                                        <br />
                                                        <tr>
                                                            @Html.DisplayFor(modelItem => item.so_phong)
                                                        </tr>
                                                        <br />
                                                        <tr>
                                                            @Html.DisplayFor(modelItem => item.LoaiPhong.mo_ta)
                                                        </tr>
                                                        <br />
                                                        <tr>
                                                            @Html.DisplayFor(modelItem => item.Tang.ten_tang)
                                                        </tr>
                                                        <br />
                                                        <tr>
                                                            @Html.DisplayFor(modelItem => item.LoaiPhong.gia)
                                                        </tr>
                                                        <br />
                                                        <tr>
                                                            <button id="btn_@item.ma_phong" class="btn  btn-hoantat1" onclick="btnClick(@item.ma_phong)">Chọn phòng</button>
                                                        </tr>
                                                    </table>
                                                </div>

                                            </td>
                                        }
                                    }
                                </tr>

                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div id="slider">

</div>
<script>
    function clickImg(id) {
        $.ajax({
            url: "/Home/Slider/" + id,
            type: "GET",
            success: function (data) {
                $("#slider").html(data);
            }
        });
    }
</script>
<script>
    function btnClick(id) {
        var btn = $('#btn_' + id);
        if (btn.html() == "Chọn phòng") {
            $.ajax({
                url: '/Home/ChonPhong/' + id,
                type: 'GET',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                success: function (data) {
                    if (data.trim() == 'success') {
                        btn.removeClass('btn-success').addClass('btn-default');
                        $('#btn_' + id).html('Huỷ chọn');
                    }
                }
            });
        } else {
            $.ajax({
                url: '/Home/HuyChon/' + id,
                type: 'GET',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                success: function (data) {
                    if (data.trim() == 'success') {
                        btn.removeClass('btn-default').addClass('btn-success');
                        $('#btn_' + id).html('Chọn phòng');
                    }
                }
            });
        }
    }
    function checkChonPhong() {
        var li = document.getElementsByClassName('btn-default');
        if (li.length == 0) {
            alert('Bạn chưa chọn phòng');
            return false;
        }
        if (checkday() == false) {
            return false;
        }
        return true;
    }
</script>
<script>
    function checkday() {
        var from1 = $("#datestart").val().split("/");
        var dateS = new Date(from1[2], from1[1] - 1, from1[0]);
        var from2 = $("#dateend").val().split("/");
        var dateE = new Date(from2[2], from2[1] - 1, from2[0]);

        var now = new Date();
        now.setHours(0);
        now.setSeconds(0);
        now.setMinutes(0);
        now.setMilliseconds(0);

        if (dateS < now) {
            alert("Ngày vào lớn hơn hoặc bằng ngày hiện tại !");
            return false;
        }
        if (dateE <= dateS) {
            alert("Ngày ra phải lớn hơn ngày vào ít nhất 1 ngày !");
            return false;
        }
        if (from1 == "" || from2 == "") {
            alert("Ngày tháng không được để trống !");
            return false;
        }
        return true;
    }
</script>
