@model IEnumerable<QLKS.Models.HoaDon>

@{
    ViewBag.Title = "Danh sách hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<div class="container">
    <br /><br /><br /><br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Danh sách hóa đơn</h3>
        </div>
        <div class="panel-body">
                    <table class="table table-bordered" id="dataTable" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Mã hóa đơn
                                </th>
                                <th>
                                    Số phòng
                                </th>
                                <th>
                                    Ngày vào
                                </th>
                                <th>
                                    Ngày trả phòng
                                </th>
                                <th>
                                    Tiền phòng
                                </th>
                                <th>
                                    Tình trạng
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.ma_tinh_trang == 2)
                                {
                            <tr class="alert-success">
                                <td>
                                    @Html.DisplayFor(modelItem => item.ma_hd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhieuDatPhong.Phong.so_phong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhieuDatPhong.ngay_vao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ngay_tra_phong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tien_phong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TinhTrangHoaDon.mo_ta)
                                </td>
                                <td>
                                    @Html.ActionLink("Chi tiết", "ChiTietHoaDon", new { id = item.ma_hd })
                                </td>
                            </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ma_hd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhieuDatPhong.Phong.so_phong)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhieuDatPhong.ngay_vao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhieuDatPhong.ngay_ra)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tien_phong)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TinhTrangHoaDon.mo_ta)
                                        </td>
                                        <td>
                                            @*@Html.ActionLink("Edit", "Edit", new { id = item.ma_hd }) |
            @Html.ActionLink("Details", "Details", new { id = item.ma_hd }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ma_hd })*@
                                            @Html.ActionLink("Chi tiết", "ChiTietHoaDon", new { id = item.ma_hd })
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
    </div>
</div>
</div>