@model IEnumerable<QLKS.Models.PhieuDatPhong>

@{
    ViewBag.Title = "Danh sách phiếu đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<div class="container">
    <br /><br /><br /><br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.title</h3>
        </div>
        <div class="panel-body">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Mã phiếu
                        </th>
                        <th>
                            Số phòng
                        </th>
                        <th>
                            Ngày vào
                        </th>
                        <th>
                            Ngày dự kiến ra
                        </th>
                        <th>
                            Tình trạng
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ma_pdp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phong.so_phong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ngay_vao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ngay_ra)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TinhTrangPhieuDatPhong.tinh_trang)
                            </td>
                            @if (item.TinhTrangPhieuDatPhong.tinh_trang.Equals("Đang đặt"))
                            {
                                <td>
                                    <a class="nav-link" href="@Url.Action("XoaPhieuDatPhong", "Account", new { id = item.ma_pdp })">Hủy đặt</a>
                                </td>
                            }
                            else
                            {
                                <td>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>